---
import Layout from "../layouts/Layout.astro";
// COMPONENTS
import Projects from "../components/Projects.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import Exprerience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Education from "../components/Education.astro";
import AboutMe from "../components/AboutMe.astro";
// ICONS
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import DescargaArchivo from "../components/icons/DescargaArchivo.astro";
import Terminal from "../components/icons/Terminal.astro";
import Books from "../components/icons/Books.astro";
import Profile from "../components/icons/Profile.astro";
---

<Layout title="Portfolio de Pablo Brasero - Desarrollador y programador Web">
  <main
    class="px-10 flex flex-col justify-center content-center items-center"
  >
    <SectionContainer id="top" class="pt-56 pb-32">
      <h1
        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row flex-wrap gap-x-4 pb-4"
      >
        Hi, I'm Pablo Brasero
        <a
          href="www.linkedin.com/in/pablo-brasero-martínez"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Ready for everything</Badge>
        </a>
      </h1>
      <h2 class="text-lg sm:text-2xl text-wrap max-w-[700px]">
        <span>+4 years of experience. </span><span
          class="bg-gradient-to-b from-cyan-900 to-cyan-500 dark:from-cyan-50 dark:to-cyan-400 bg-clip-text text-transparent"
          >Web developer and programmer.
        </span><span>Madrid, Spain.</span>
        <span></span>Especialized in creating solutions
      </h2>

      <nav class="flex flex-wrap gap-x-4 gap-y-4 mt-6">
        <SocialPill href="/CurrículumPabloBrasero.pdf" download>
          <DescargaArchivo class="size-6" />
          Curriculum Vitae
        </SocialPill>
        <SocialPill
          href="https://www.linkedin.com/in/pablo-brasero-mart%C3%ADnez-762036230/"
        >
          <LinkedIn class="size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Polinss3">
          <GitHub class="size-6" />
          Github
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience" class="pt-18">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />Experience
      </h2>
      <Exprerience />
    </SectionContainer>

    <SectionContainer id="projects" class="pt-40 pb-20">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Terminal class="size-7" />Projects
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about-me" class="pt-20 pb-28">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Profile class="size-7" />About Me
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer>
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Books class="size-7" />Education
      </h2>
      <Education />
    </SectionContainer>
  </main>
</Layout>


