---
// TAGS
import HTML from "./icons/tags/HTML.astro";
import CSS from "./icons/tags/CSS.astro";
import JAVASCRIPT from "./icons/tags/JavaScript.astro";
import ASTRO from "./icons/tags/AstroIcon.astro";
import TAILWIND from "./icons/tags/Tailwind.astro";
import PYTHON from "./icons/tags/Python.astro";
import WORDPRESS from "./icons/tags/WordPress.astro";
import NEXTJS from "./icons/tags/NextJS.astro";
import FASTAPI from "./icons/tags/FastAPI.astro";
import DOCKER from "./icons/tags/Docker.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-orange-600 dark:text-orange-400 border-orange-500 dark:bg-gray-700",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-blue-800 dark:text-blue-200 border-blue-400 dark:bg-gray-700",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-yellow-900 dark:text-yellow-300 border-yellow-400 dark:bg-gray-700",
    icon: JAVASCRIPT,
  },
  ASTRO: {
    name: "Astro",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-indigo-900 dark:text-indigo-300 border-indigo-400 dark:bg-gray-700",
    icon: ASTRO,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-cyan-900 dark:text-cyan-300 border-cyan-400 dark:bg-gray-700",
    icon: TAILWIND,
  },
  PYTHON: {
    name: "Python",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-green-900 dark:text-green-300 border-green-400 dark:bg-gray-700",
    icon: PYTHON,
  },
  WORDPRESS: {
    name: "WordPress",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-blue-900 dark:text-blue-300 border-blue-400 dark:bg-gray-700",
    icon: WORDPRESS,
  },
  NEXTJS: {
    name: "Next.js",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-black dark:text-white border-black dark:bg-gray-700",
    icon: NEXTJS,
  },
  FASTAPI: {
    name: "FastAPI",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-green-900 dark:text-green-300 border-green-400 dark:bg-gray-700",
    icon: FASTAPI,
  },
  DOCKER: {
    name: "Docker",
    class:
      "bg-gray-200 dark:bg-gray-800 border rounded light:text-blue-900 dark:text-blue-300 border-blue-400 dark:bg-gray-700",
    icon: DOCKER,
  },
};

const PROJECTS = [
  {
    title: "Next.js Components and Blog",
    description:
      "A collection of reusable components and a blog built with Next.js, Tailwind CSS. Tested using Jest and React Testing Library.",
    image: "/projects/web-nextJS-thumbnail.png",
    link: "https://web-next-js-nu.vercel.app/",
    github: "https://github.com/Polinss3/web-next.js",
    tags: [TAGS.NEXTJS, TAGS.HTML, TAGS.TAILWIND, TAGS.JAVASCRIPT, TAGS.CSS],
  },
  {
    title: "Multifunctional API Project with FastAPI and Docker",
    description: `This repository contains a set of microservices developed with Python and FastAPI to provide various functionalities through a scalable and accessible API. The project includes integrations for chatbots, AI-powered image generation, and general-purpose tools like calculators and other customizable applications.
                  Each microservice is encapsulated in Docker containers and managed with Docker Compose to enable seamless deployment across different environments. The modular structure allows for easy expansion and customization of functionalities to fit various use cases.`,
    image: "/projects/fastAPI-thumbnail.png",
    link: "",
    github: "https://github.com/Polinss3/fastAPI-project",
    tags: [TAGS.PYTHON, TAGS.FASTAPI, TAGS.DOCKER]
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image, link, github }) => (
    <article class="flex flex-col py-8 gap-y-2">
      <img
        class="rounded-lg shadow-md shadow-black/50 dark:shadow-white/50"
        src={image}
        alt={`Captura de pantalla de ${title}`}
      />
      <h3 class="min-w-44 md:min-w-72 mr-10 md:text-xl lg:text-2xl font-semibold">
        {title}
      </h3>
      <ul class="flex flex-row flex-wrap gap-x-2 gap-y-2">
        {tags.map((tag) => (
          <li
            class={`flex flex-row justify-center content-center items-center gap-x-1 text-xs font-medium px-2 py-1 rounded-md  ${tag.class}`}
          >
            <tag.icon class="size-4" /> {tag.name}
          </li>
        ))}
      </ul>
      <p class="text-pretty opacity-80">{description}</p>
    </article>
  ))
}
